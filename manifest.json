{
  "manifest_version": 2,
  "name": "MZ Transfer Alarm",
  "version": "0.2",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "homepage_url": "https://github.com/kaplanbora/mz-transfer-alarm",
  "permissions": ["notifications", "alarms"],
  "icons": {
    "48": "light-icons/logo-48.png",
    "96": "light-icons/logo-96.png"
  },
  "content_scripts": [{
      "matches": ["https://www.managerzone.com/?p=shortlist"],
      "js": ["content_scripts/mz.js"]
  }],
  "background": {
    "scripts": ["background_scripts/content.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "light-icons/logo-32.png",
	  "theme_icons": [{
		  "light": "dark-icons/logo-32.png",
		  "dark": "light-icons/logo-32.png",
      "size": 32
	  }],
    "default_title": "MZ Transfer Alarm",
    "default_popup": "popup/index.html"
  }
}
